<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DynoUI" x:Class="DynoUI.IntSliderWindow"
        mc:Ignorable="d" Height="167" Width="202" WindowStyle="None" Topmost="True" AllowsTransparency="True"
        Background="#FF3A3A3A" ResizeMode="NoResize" SizeToContent="Height">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Dark Theme -->
                <ResourceDictionary Source="Themes/MetroDark.MSControls.Core.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel x:Name="Inner" Orientation="Vertical" Margin="1,0,1,1">
        <local:ParTitleControl x:Name="TitleControl" VerticalAlignment="Top" Width="Auto"></local:ParTitleControl>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ValueText" Grid.Column="0"  Width="35" Text="{Binding IntValue, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            <Label x:Name="MinLabel" Grid.Column="1" Content="{Binding Min, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" Width="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Slider Grid.Column="2" Margin="5,0,5,0" x:Name="ValueSlider" VerticalAlignment="Center" Value="{Binding  IntValue, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" Minimum="{Binding Min, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" Maximum="{Binding Max, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" />
            <Label x:Name="MaxLabel" Grid.Column="3" Content="{Binding Max, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IntSliderWindow}}}" Width="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        </Grid>


    </StackPanel>
</Window>