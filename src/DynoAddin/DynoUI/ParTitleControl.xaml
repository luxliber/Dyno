<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DynoUI" x:Class="DynoUI.ParTitleControl"
        mc:Ignorable="d" Width="230"
        Background="#FF3A3A3A">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Dark Theme -->
                <ResourceDictionary Source="Themes/MetroDark.MSControls.Core.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
        <Grid >
            <Label Margin="20,0,0,0" x:Name="ParameterName"  Content="Label  cbcbcbc cbcvbc bd dgdfg dfgdg dfgdg" HorizontalAlignment="Left" Foreground="White" FontStyle="Italic" FontSize="11" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="60">
                <Button Name="Ok" Content="✓" Foreground="GreenYellow"/>
                <Button Name="Cancel" Content="✖" Foreground="Red"/>
            </StackPanel>
        </Grid>
</UserControl>