<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Class="Dyno.Views.WorkspaceFormWindow"
        Title="{Binding Name}"  WindowStartupLocation="CenterScreen" d:DesignWidth="300" d:DesignHeight="191.214" MinHeight="200" MinWidth="200"
    
    Style="{DynamicResource WorkspaceFormWindowStyle}" Background="{DynamicResource WorkspaceFormWindowBorderBrush}" 
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/MetroLight/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="../Themes/MetroLight/Metro.MSControls.Toolkit.Implicit.xaml" />
                <ResourceDictionary Source="/DynoCore;component/Themes/WorkspaceFormStyle.xaml" />
                <ResourceDictionary Source="/DynoCore;component/Themes/WorkspaceFormWindowStyle.xaml" />
                <ResourceDictionary Source="/DynoCore;component/Themes/FlatComboBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TabControl Visibility="Visible" Grid.Row="0" x:Name="FormTabControl" Style="{DynamicResource WorkspaceFormTabControlStyle}" ItemsSource="{Binding ShownTabItems}" SelectedIndex="{Binding SelectedIndex}" SelectionChanged="FormTabControl_OnSelectionChanged"/>
        <Border Padding="10,0,10,10" Grid.Row="1" SnapsToDevicePixels="True" Background="white">
            <DockPanel HorizontalAlignment="Right" Background="LightGray">
                <Button FontSize="13"  Padding="10,0,10,0" DockPanel.Dock="Right" Content="{Binding  RunAndCloseText}" IsEnabled="{Binding Path=IsNoError, Mode=OneWay}" x:Name="RunAndCloseButton" x:FieldModifier="public">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RunButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditorIsRunAndCloseVisible}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Border Width="1" DockPanel.Dock="Right" Background="DarkGray" Margin="0 5 0 5"/>
                <Button FontSize="13" BorderThickness="0,0,0,0" Padding="10,0,10,0" DockPanel.Dock="Right" Content="{Binding  RunText}"  IsEnabled="{Binding Path=IsNoError, Mode=OneWay}" x:Name="RunButton" x:FieldModifier="public">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RunButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditorIsRunVisible}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                       
                    </Button.Style>
                </Button>

            </DockPanel>
        </Border>
    </Grid>
</Window>