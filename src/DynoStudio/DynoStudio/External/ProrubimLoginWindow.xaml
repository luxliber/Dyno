<Window x:Class="Prorubim.External.ProrubimLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="246.745" Width="435.847" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        x:ClassModifier="internal" SizeToContent="Height">
    <Grid>
        <TextBox x:Name="LoginBox" Height="23" Margin="10,56,10,0" TextWrapping="NoWrap" MaxLines="1" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Height="23" Margin="10,107,10,0" VerticalAlignment="Top" />
        <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Click="CancelButton_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="SignInButton" Content="Sign In" IsDefault="True" Margin="0,0,10,10" Click="SignInButton_Click" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="StatusBox" Margin="10,135,10,35" TextWrapping="Wrap" Foreground="Red" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="10,33,0,0" TextWrapping="Wrap" Text="Login:" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ><Run Text="Passwo"/><Run Text="rd:"/></TextBlock>
        <TextBlock Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Please enter your prorubim.com login and password for license activation." VerticalAlignment="Top"/>

    </Grid>
</Window>
