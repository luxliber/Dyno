<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="AddTabButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource LightGray}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="30"/>
       
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource BlueColor}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="AddTabControlTemplate">
        <Border Background="{TemplateBinding Background}">
            <Path Stroke="{TemplateBinding Foreground}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigure StartPoint="0,7">
                                <LineSegment Point="14,7"/>
                            </PathFigure>
                            <PathFigure StartPoint="7,0">
                                <LineSegment Point="7,14"/>
                            </PathFigure>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="CopyTabControlTemplate">
        <Border Background="{TemplateBinding Background}">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                <Canvas.RenderTransform>
                    <TranslateTransform X="-7" Y="-5" />
                </Canvas.RenderTransform>
                <Rectangle Stroke="{TemplateBinding Foreground}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="12" Height="12"/>
                <Polyline Points="3,-3 15,-3 15,10" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                </Polyline>
            </Canvas>
        </Border>
    </ControlTemplate>

</ResourceDictionary>
