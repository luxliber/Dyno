<Application x:Class="Prorubim.DynoStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <DrawingBrush x:Key="GridLinesBackgroundCanvas" Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z " Brush="#CCCCFF" />
                    <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="#CCCCFF" />
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <VisualBrush x:Key="GridPointsBackgroundCanvas" TileMode="Tile" Viewport="0,0,10,10" ViewboxUnits="Absolute" Viewbox="0,0,10,10" ViewportUnits="Absolute">
            <VisualBrush.Visual>
                <Canvas>
                    <Rectangle Width="1" Height="1" Fill="{DynamicResource Gray}"/>
                </Canvas>
            </VisualBrush.Visual>
        </VisualBrush>

        <SolidColorBrush x:Key="BorderBrush" Color="#FFB9B9B9"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#252525" />
        <SolidColorBrush x:Key="LightColor" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="LightGray" Color="#aaaaaa"/>
        <SolidColorBrush x:Key="DarkGray" Color="#171717"/>
        <SolidColorBrush x:Key="Gray" Color="#303030"/>
        <SolidColorBrush x:Key="BlueColor" Color="#FF509DD3"/>
        <SolidColorBrush x:Key="TransBlueColor" Color="#7F509DD3"/>
        <SolidColorBrush x:Key="TransBlueColor2" Color="#2F507DD3"/>

        <system:Double x:Key="H2FontSize">18</system:Double>
        <system:Double x:Key="H3FontSize">13</system:Double>

        <Style x:Key="ColorSelectorButton" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <EventSetter Event="Click" Handler="ColorButtonSelectorClick"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Border x:Name="Back" Background="{TemplateBinding Background}" BorderThickness="0"/>
                            <Border x:Name="Front" BorderBrush="#55000000" Background="#55ffffff" BorderThickness="3"  Visibility="Collapsed" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter  TargetName="Front" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
